<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/click_item"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/item"
            android:layout_height="45dp">
            <ImageView
                android:src="@mipmap/ic_jc_1"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="如何创建快捷指令？"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/item_left"
                android:padding="8dp"
                android:layout_height="100dp">
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/model_bg_3"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="90dp"
                    android:background="@drawable/text_fields"
                    android:alpha="0.15"
                    android:layout_gravity="right"
                    android:layout_height="90dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="文字教程"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3分钟快速了解"
                        android:textSize="12dp"
                        android:textColor="#90ffffff"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/item_right"
                android:padding="8dp"
                android:layout_height="100dp">
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/model_bg_1"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="90dp"
                    android:background="@mipmap/ic_video"
                    android:alpha="0.15"
                    android:layout_gravity="right"
                    android:layout_height="90dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="视频教程"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="跟随一步步操作"
                        android:textSize="12dp"
                        android:textColor="#90ffffff"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>