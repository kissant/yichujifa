<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/item"
            android:background="@drawable/click_item"
            android:layout_height="45dp">
            <ImageView
                android:src="@mipmap/ic_jc_1"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="为什么要开发本应用？"
                android:layout_marginLeft="8dp"

                android:id="@+id/text_2"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/ic_right"
                android:layout_weight="0"
                android:id="@+id/ex"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <TextView
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:text="随着科技发展和进步，自动化是未来趋势，因此将用户每天重复的一连串动作最终变成一个动作，只需一键操作即可达到用户的操作目的功能尤为重要！类似iPhone系统中提供的快捷指令，我们决定让Android也开发一个，并且让它更智能，更实用我们使用！"
            android:textColor="#90000000"
            android:id="@+id/text_1"
            android:textSize="13dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>