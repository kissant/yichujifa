<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main6Activity">
    <View
        android:layout_width="match_parent"
        android:id="@+id/animation"
        android:background="#22AA39"
        android:layout_height="match_parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:title="开通会员"
                app:navigationIcon="@mipmap/ic_back"
                app:titleTextColor="@color/white"
                android:layout_height="?attr/actionBarSize"
                android:background="#00000000"/>

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                app:tabIndicatorColor="#00000000"
                android:id="@+id/tablayout"
                android:background="#00000000"
                app:tabGravity="center"
                app:tabSelectedTextColor="#ffffff"
                app:tabTextColor="#90ffffff"
                app:tabMode="fixed"
                app:tabMinWidth="180dp"
                android:layout_height="wrap_content">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="微信付款"
                    android:icon="@drawable/ic_wechat"
                    android:layout_height="wrap_content" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="QQ付款"
                    android:icon="@drawable/ic_holder_qq"
                    android:layout_height="wrap_content" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="支付宝付款"
                    android:icon="@drawable/ic_alipay"
                    android:layout_height="wrap_content" />
            </com.google.android.material.tabs.TabLayout>

            <esqeee.xieqing.com.eeeeee.widget.card.CardView
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </esqeee.xieqing.com.eeeeee.widget.card.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>