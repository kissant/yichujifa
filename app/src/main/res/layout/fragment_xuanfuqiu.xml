<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#50e4e4e4"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="悬浮球"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:background="#10008B8B"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <TextView
            android:layout_width="match_parent"
            android:text="悬浮球开关"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_weight="0"
            android:layout_marginRight="8dp"
            android:layout_width="60dp"
            android:id="@+id/switchid"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#10008B8B"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <TextView
            android:layout_width="match_parent"
            android:text="允许移动"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_weight="0"
            android:layout_marginRight="8dp"
            android:layout_width="60dp"
            android:id="@+id/switchid2"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item_1"
        android:background="@drawable/click_item"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:background="@drawable/assistive_touch_background2"
            android:src="@drawable/touch"
            android:layout_marginLeft="16dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="东邪"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="0"
            android:padding="6dp"
            android:src="@mipmap/ic_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/item_2"
        android:background="@drawable/click_item"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:background="@drawable/assistive_touch_background2"
            android:src="@drawable/touch"
            android:layout_marginLeft="16dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="西毒"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="0"
            android:padding="6dp"
            android:src="@mipmap/ic_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item_3"
        android:background="@drawable/click_item"
        android:gravity="center_vertical"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:background="@drawable/assistive_touch_background2"
            android:src="@drawable/touch"
            android:layout_marginLeft="16dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="南帝"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="0"
            android:padding="6dp"
            android:src="@mipmap/ic_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item_4"
        android:background="@drawable/click_item"
        android:gravity="center_vertical"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:background="@drawable/assistive_touch_background2"
            android:src="@drawable/touch"
            android:layout_marginLeft="16dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="北丐"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="0"
            android:padding="6dp"
            android:src="@mipmap/ic_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item_5"
        android:background="@drawable/click_item"
        android:gravity="center_vertical"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:padding="5dp"
            android:background="@drawable/assistive_touch_background2"
            android:src="@drawable/touch"
            android:layout_marginLeft="16dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="轩辕"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="0"
            android:padding="6dp"
            android:src="@mipmap/ic_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/showDan"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="单点悬浮窗"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/item_6"
            android:background="@drawable/click_item"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="25dp"
                android:padding="5dp"
                android:background="@drawable/assistive_touch_background2"
                android:src="@drawable/touch"
                android:layout_marginLeft="16dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="轩辕"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="40dp"
                android:layout_weight="0"
                android:padding="6dp"
                android:src="@mipmap/ic_right"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>