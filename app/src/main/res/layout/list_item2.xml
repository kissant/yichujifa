<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="left"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content">
    <esqeee.xieqing.com.eeeeee.widget.CircleImageView
        android:layout_width="40dp"
        android:id="@+id/image"
        android:layout_marginLeft="10dp"
        android:src="@drawable/action_2"
        android:layout_height="40dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="重复打开闪光灯"
            android:id="@+id/title"
            android:textColor="#000"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13dp"
            android:gravity="top"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#50000000"
            android:text="创建时间:2018年12月1日 22:31:56"
            android:id="@+id/creatTime"
            android:textSize="10dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="35dp"
        android:id="@+id/stop"
        android:background="@drawable/click_item"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_close"
        android:layout_height="35dp" />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#20868868"
        android:layout_height="1px"/>
</LinearLayout>