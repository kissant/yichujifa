<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/click_item"
        android:orientation="vertical">

        <View
            android:id="@+id/menu_line"
            style="@style/com_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/click_item"
            android:layout_height="55dp">
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/src_icon"
                android:layout_marginLeft="80dp"
                android:src="@drawable/icon_loading_1"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_height="@dimen/com_padding_55"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Item"
                android:textColor="@color/com_font_color_4a4a4a"
                android:textSize="@dimen/com_font_size_14" />
        </LinearLayout>

    </LinearLayout>